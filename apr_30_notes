s = 'a1b2c3'
#output: abc123

alpha = ''
numbers = ''
for letter in s:
    if letter.isalpha():
        alpha = alpha+letter
    else:
        numbers = numbers + letter

print(alpha+numbers)

Comprehensive approach: 
s='a1b2c3'
letters = [char for char in s if char.isalpha()]
nums = [no for no in s if no.isdigit()]
output = ''.join(letters+nums)
print(output)
    
----------------------
#input: a4k3b2
#output: aeknbd

s='a4k3b2'
output = ''
for letter in s:
    if letter.isalpha():
        output = output + letter
        previous = letter #a
    else:
        no = int(letter)
        alpha = chr(ord(previous)+no)
        output+=alpha
print(output)

--------------------
#input: aaabbbbbbcccccdddd
#output: abcd

input = 'aaabbbbbbcccccdddd'
output = ''
for x in input:
    if x not in output:
        output = output+x
print(output)
-------------------------
input = 'a1b2c3'
#output: abbcccddd

input = 'a1b2c3'
#output: abbcccddd
output = ''
for x in input:
    if x.isalpha():
        output = output + x
        previous = x
    else:
        no = int(x)
        z = chr(ord(previous)+1)
        output = output + z*no
print(output)

