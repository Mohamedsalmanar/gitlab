#Using numpy: 
import numpy as np

matrix = [  [10,20,30],
            [40,50,60],
            [70,80,90]
         ]

matrix_array = np.array(matrix)
print(matrix_array)
print(matrix_array.T)
--------------------
matrix = [  [10,20,30],
            [40,50,60],
            [70,80,90]
         ]

transposed_matrix = []
for i in range(len(matrix)):
    for j in range(len(matrix[i])):
        transposed_matrix.append(matrix[j][i])

print(transposed_matrix)
