l = ['ABC', 'DEF', 'GHI', 'JKL']
#Output: ['ABC', 'def', 'GHI', 'jkl']
#Output: ['ABC', 'FED', 'GHI', 'LKJ']

l = ['ABC', 'DEF', 'GHI', 'JKL']
#Output: ['ABC', 'def', 'GHI', 'jkl']
#Output: ['ABC', 'FED', 'GHI', 'LKJ']
count =0
output = []
for i in l:
    count += 1
    if count%2==0:
        output.append(i.lower())
    else:
        output.append(i)
print(output)
----------
l = ['ABC', 'DEF', 'GHI', 'JKL']
#Output: ['ABC', 'def', 'GHI', 'jkl']
#Output: ['ABC', 'FED', 'GHI', 'LKJ']
count =0
output = []
for i in l:
    count += 1
    if count%2==0:
        output.append(i[::-1])
    else:
        output.append(i)
print(output)
----------















